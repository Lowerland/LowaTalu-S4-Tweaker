<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pkg.talu.lowa.s4.tweaker"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="17" />

        <supports-screens
        android:anyDensity="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:resizeable="true"
        android:xlargeScreens="true" />
        
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:icon="@drawable/ic_action_name"
        android:label="@string/maintext" android:allowBackup="true">
        <activity
            android:name="pkg.talu.lowa.s4.tweaker.Main"
            android:label="@string/maintext" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="pkg.talu.lowa.s4.tweaker.about.About"
            android:icon="@drawable/ic_about"></activity>
        <activity android:name="pkg.talu.lowa.s4.tweaker.soundtweaks.SoundTweaks"
            android:icon="@drawable/ic_soundtweaks"></activity>
    </application>

</manifest>