<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:orientation="vertical" >

    <!-- Logo -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_smaller" />

    <!-- Line -->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@+id/logo"
        android:layout_marginTop="5dp"
        android:background="#698bdd" />

    <!-- Text I/O Schedulers -->
    <TextView
        android:id="@+id/textIOscheduler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/logo"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:text="@string/io_scheduler"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <!-- Text Internal Storage -->
    <TextView
        android:id="@+id/textIOschedulerinternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textIOscheduler"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="6dp"
        android:text="@string/internal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp" />

    <!-- Dropdownmenu Internal Storage -->    
    <Spinner
        android:id="@+id/internalspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textIOschedulerinternal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:drawSelectorOnTop="true"
        android:prompt="@string/spinner_internal" />

    <!-- Current Value Internal Storage -->    
    <TextView
        android:id="@+id/textInternalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textIOscheduler"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/back"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="sans" />
    
    <!-- Text External Storage -->
    <TextView
        android:id="@+id/textIOschedulerexternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/internalspinner"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="7dp"
        android:text="@string/external"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp" />
    
     <!-- Dropdownmenu External Storage -->
    <Spinner
        android:id="@+id/externalspinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textIOschedulerexternal"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:drawSelectorOnTop="true"
        android:prompt="@string/spinner_internal" />
    
    <!-- Current Value External Storage -->
    <TextView
        android:id="@+id/textExternalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/internalspinner"
        android:layout_marginRight="6dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/back"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="16sp"
        android:textStyle="normal"
        android:typeface="sans" />

</RelativeLayout>